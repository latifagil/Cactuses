<Page x:Class="Cactus.Pages.captha"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cactus.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="captha">
    <Grid Background="White">

        <Grid Width="500" Height="300">
            <StackPanel Orientation="Horizontal" Name="SPanelSymbols" HorizontalAlignment="Center" VerticalAlignment="Center">

            </StackPanel>
            <Canvas Name="CanvasNoise"></Canvas>
        </Grid>
        <TextBox x:Name="TxtCapch" BorderBrush="Black" BorderThickness="1"  Height="50" Width="285" Margin="0 150 0 0"/>
        <Button  x:Name="BtnButton" Click="BtnButton_Click" Content="Проверить" Height="50" Width="285" Margin="182,355,182,45" Background="Black" BorderBrush="Black" Foreground="White"/>
        <Button x:Name="BtnUpdateCaptcha" VerticalAlignment="Bottom" Click="BtnUpdateCaptcha_Click" Width="285" Foreground="White" Background="#FF6D2020" BorderBrush="#FF811F1F">Обновить капчу</Button>
    </Grid>
</Page>
